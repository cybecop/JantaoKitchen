<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register, Chef!"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- Поле для логина -->
    <EditText
        android:id="@+id/et_register_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="enter your login"
        android:background="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_below="@id/tv_register_title"
        android:layout_centerHorizontal="true" />

    <!-- Поле для пароля -->
    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="enter your password"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_register_login"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword" />

    <!-- Кнопка "Register" -->
    <Button
        android:id="@+id/btn_register_submit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_register_password"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
